{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
